
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

<div class="container">
    @using (Html.BeginForm("Register", "User", FormMethod.Post))
    {
    <form class="row g-3 needs-validation" novalidate>
        <div class="col-md-4">
            <label for="validationCustom01" class="form-label">First name</label>
            <input type="text" class="form-control" id="validationCustom01" required>

        </div>
        <div class="col-md-4">
            <label for="validationCustom02" class="form-label">Last name</label>
            <input type="text" class="form-control" id="validationCustom02" required>

        </div>
        <div class="col-md-4">
            <label for="validationCustomUsername" class="form-label">Cellphone Number</label>
            <div class="input-group has-validation">
                <input type="text" class="form-control" id="validationCellphone" aria-describedby="inputGroupPrepend" required>

            </div>
            <br />
        </div>

        <div class="col-md-4">
            <label for="ApplicantType">Gender</label>
            <select class="form-control" id="genderValidation" name="genderValidation" required>
                <option selected disabled value="">Choose...</option>
                <option value="1">Male</option>
                <option value="2">Female</option>
                <option value="3">Other</option>
            </select>
        </div>

        <div class="col-md-4">
            <label for="ApplicantType">Applicant Type</label>
            <select class="form-control" id="applicantType" name="type" required>
                <option selected disabled value="">Choose...</option>
                <option value="1">Mentee</option>
                <option value="2">Mentor</option>
            </select>
        </div>
        <div class="col-md-4">
            <label for="validationAddress">Full Residential Address</label>
            <div class="input-group has-validation">
                <textarea class="form-control" id="validationAddress" name="validationAddress" rows="1" required></textarea>
            </div>

        </div>
        <div class="col-md-4">
            <label for="validationEmail" class="form-label">Email Address</label>
            <input type="text" class="form-control" id="validationEmail" required>

        </div>
        <br />
        <div class="col-md-4">
            <br />
            <label for="DOB">Date Of Birth:</label>
            <input type="date" id="DOB" name="DOB" required>
        </div>

        <div class="col-md-4">
            <br />
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                <label class="form-check-label" for="invalidCheck">
                    Agree to terms and conditions
                </label>
                <div class="invalid-feedback">
                    You must agree before submitting.
                </div>
            </div>
        </div>

        <div class="col-md-12">
            <button class="btn btn-primary" type="submit">Submit form</button>
        </div>
    </form>
    }

